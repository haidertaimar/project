<p id="notice"><%= notice %></p>
<h1 class="d-flex  container justify-content-center"style="background-color:#a1a0a0;">Posts</h1>
<div class="container " style="background-color:#a1a0a0;">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%=  blog.detials %></td>
        <td style="background-color:  ;"><%= button_to 'Show', blog,method: :get,class: "btn btn-info btn-sm" %></td>
        <td style="background-color:  ;"><%= button_to 'Edit', edit_blog_path(blog),method: :get,class: "btn btn-primary btn-sm" %></td>
        <td ><%= button_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<%= link_to 'New Blog', new_blog_path ,class:"d-flex  container justify-content-center"%>

<div class="container mt-4 pagination d-flex justify-content-center"><%= will_paginate @blogs %></div>
