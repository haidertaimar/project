<p id="notice"><%= notice %></p>

<h1 class="d-flex  container justify-content-center"style="background-color:#a1a0a0;">Timeline</h1>
<div class="container" style="background-color:#a1a0a0;">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detials</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%if !@blogs.blank?%>
    <% @blogs.reverse.each do |blog| %>
      <div class="d-flex flex-row-reverse">
      <tr class="p-2">
        <td><%= blog.title %></td>
        <td><%= blog.detials %></td>
         <td></td>
        <td style="background-color:  ;"><%= button_to 'Show', blog,method: :get,class: "btn btn-info btn-sm" %></td>
        <td style="background-color:  ;"><%= button_to 'Edit', edit_blog_path(blog),method: :get,class: "btn btn-primary btn-sm" %></td>
        <td class="align-item-right" ><%= button_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %></td>
      </tr>
      </div>
    <% end %>
  
 <% end %>

  </tbody>
</table>
  <%if @blogs.blank?%>
 <p>
    Follow someone to see posts on your Timeline
    <p>
      <% end %>
<br>
</div>
